{
  "name": "@mixer/postmessage-rpc",
  "version": "1.0.0",
  "description": "Remote procedure call layer between browser contexts",
  "main": "dist/rpc.js",
  "scripts": {
    "test": "npm-run-all --parallel --silent test:lint fmt test:unit",
    "test:unit": "karma start test/karma.conf.js --single-run",
    "test:lint": "tslint -t verbose --project tsconfig.json \"src/**/*.ts\"",
    "test:watch": "karma start test/karma.conf.js --no-single-run",
    "fmt": "prettier --write \"**/*.{ts,js}\" && npm run -s test:lint -- --fix",
    "prepare": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mixer/postmessage-rpc.git"
  },
  "keywords": [
    "rpc",
    "postmessage"
  ],
  "author": "Connor Peet <connor@peet.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mixer/postmessage-rpc/issues"
  },
  "homepage": "https://github.com/mixer/postmessage-rpc#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^3.0.0",
    "karma-browserstack-launcher": "^1.3.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^2.0.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "sinon": "^6.1.5",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.1"
  },
  "dependencies": {
    "eventemitter3": "^3.1.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
